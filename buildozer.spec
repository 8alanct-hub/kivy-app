[app]

# Nombre de tu aplicación
title = SET

# Nombre del paquete (sin espacios, solo minúsculas y sin caracteres especiales)
package.name = miappkivy

# Dominio del paquete (puedes usar org.example si no tienes dominio propio)
package.domain = org.example

# Archivo principal de tu app
source.main = main.py

# Requisitos / dependencias
requirements = python3,kivy

# Versión de tu app
version = 0.1

# Orientación de la pantalla (portrait o landscape)
orientation = portrait

# (Opcional) Icono de la app (ruta relativa)
# icon.filename = %(source.dir)s/icon.png

# SDK y NDK de Android que usarás
android.minapi = 21
android.sdk = 33
android.ndk = 25b

# Permisos que puede necesitar tu app (ejemplo)
# android.permissions = INTERNET

# (Opcional) Agrégale más configuraciones si lo necesitas
